@model IEnumerable<XSIS.Shop.viewModel.OrderViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="block-header">
    <h2>Order</h2>
</div>
<div class="card">
    <div class="card-header">
        <div class="row">
            <form method="post">
                <div class="col-lg-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i></span>
                        @Html.TextBox("orderNumber", "", new { @class = "form-control ", @placeholder = "Order Number" })
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="input-group">                        
                        <div class="input-group form-group">
                            <span class="input-group-addon"><i class="zmdi zmdi-calendar"></i></span>
                            <div class="dtp-container">
                                <input type='text' id="dateTime" name="dateTime" class="form-control date-picker"
                                       placeholder="Order Date" />
                            </div>
                        </div>
                    </div>                    
                </div>
                <div class="col-lg-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="zmdi zmdi-account"></i> </span>
                        <div class="col-md-10">
                            @Html.DropDownList("CustomerId", null,"Pilih Customer", htmlAttributes: new { @class = "form-control" })                            
                        </div>                        
                    </div>
                </div>
                <div class="col-lg-3">
                    <button type="submit" class="btn btn-info"><i class="zmdi zmdi-search-for"></i> Cari</button>
                    <a href="@Url.Action("Create", "Orders")" class="btn btn-info"> New Order</a>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

    </table>
